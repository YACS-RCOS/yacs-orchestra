#!/bin/bash
WORKDIR=$(cd -P -- "$(dirname -- "$0")" && pwd -P)/../develop
cd $WORKDIR

REPOS="yacs
yacs-web
yacs-admin
yacs-users
yacs-nginx
yacs-malg
yacs-prereq-web
yacs-prereq-data"

for repo in $REPOS; do
  uri="git@github.com:YACS-RCOS/$repo.git"
  git clone $uri
done

cd $WORKDIR && cd yacs && git checkout micro
cd $WORKDIR && cd yacs-prereq-data && git checkout rails

for repo in $REPOS; do
  cd $WORKDIR
  cd $repo && git pull
done
